<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <nav class="navbar">
      {{ msg }}
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/articles/add_article">Add Article</a></li>
        {{#if user}}
          <li><a href="/users/logout">Logout</a></li>
        {{else}}
          <li><a href="/users/register">Register</a></li>
          <li><a href="/users/login">Login</a></li>
        {{/if}}
      </ul>
    </nav>

    {{#if errors}}
      <div class="container">
        <div class="errors">
          {{#each errors}}
            <p>{{ this.msg }}</p>
          {{/each}}
        </div>
      </div>
    {{/if}}

    {{{ body }}}

  </body>
</html>
